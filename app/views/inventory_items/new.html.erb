<%= form_with(model: @inventory_item, local: true) do |form| %>
  <% if @inventory_item.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@inventory_item.errors.count, "error") %> prohibited this inventory item from being saved:</h2>
      <ul>
        <% @inventory_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Barcode</h2>
  <div class="form-group">
    <%= form.text_field :barcode, class: "form-control", required: true, autofocus: true %>
    <div class="barcode-ready">Ready to scan</div>
    <div class="barcode-not-ready"><%= form.label :barcode, 'Click here before scanning' %></div>
    <div class="barcode-entered-not-ready"><%= form.label :barcode, 'Click here to rescan' %></div>
  </div>

  <h2>Category</h2>
  <%= turbo_frame_tag 'item_subcategory_picker', src: '/item_subcategories/picker' %>

  <h2>More Information</h2>
  <div class="form-group">
    <%= form.label :oldest_expiry_date %>
    <%= form.date_field :oldest_expiry_date, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :manual_type, "Manual type" %>
    <%= form.select :manual_type, InventoryItem.manual_types.keys.map { |c| [c.capitalize, c] }, {}, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-actions">
    <%= form.submit "Add item to inventory", class: "btn btn-primary" %>
    <%= link_to 'Cancel', '/', class: "btn btn-secondary" %>
  </div>
<% end %>