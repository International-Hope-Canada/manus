<%= form_with(model: @setting, local: true) do |form| %>
  <%= render partial: 'shared/validation_error', locals: { record: @setting } %>

  <div class="form-group">
    <%= form.label :setting_key %>
    <%= @setting.setting_key %>
  </div>

  <div class="form-group">
    <%= form.label :setting_value %>
    <%= form.textarea :setting_value, maxlength: 1000 %>
  </div>

  <div class="form-actions">
    <%= form.submit "Update setting", class: "btn btn-primary" %>
    <%= link_to 'Cancel', settings_path, class: "btn btn-secondary" %>
  </div>
<% end %>