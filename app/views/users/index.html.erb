<table class="data-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Roles</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to(user.name, user) %></td>
        <td><%= user.roles.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>