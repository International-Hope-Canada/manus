<%= form_with(model: @container, local: true) do |form| %>
  <% if @container.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@container.errors.count, "error") %> prohibited this container from being saved:</h2>
      <ul>
        <% @container.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :application_number %>
    <%= form.text_field :application_number, class: "form-control", required: true, inputmode: :numeric %>
  </div>

  <div class="form-group">
    <%= form.label :consignee_name %>
    <%= form.text_field :consignee_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :consignee_address %>
    <%= form.text_field :consignee_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :consignee_city %>
    <%= form.text_field :consignee_city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :consignee_region %>
    <%= form.text_field :consignee_region, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :consignee_country %>
    <%= form.text_field :consignee_country, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :consignee_postal_code %>
    <%= form.text_field :consignee_postal_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :consignee_contact_name %>
    <%= form.text_field :consignee_contact_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :consignee_contact_phone %>
    <%= form.text_field :consignee_contact_phone, class: "form-control", inputmode: :tel %>
  </div>

  <div class="form-group">
    <%= form.label :consignee_contact_email %>
    <%= form.email_field :consignee_contact_email, class: "form-control", inputmode: :tel %>
  </div>

  <% if @container.new_record? %>
    <div class="form-actions">
      <%= form.submit "Create Container" %>
      <%= link_to 'Cancel', containers_path %>
    </div>
  <% else %>
    <div class="form-actions">
      <%= form.submit "Update Container" %>
      <%= link_to 'Cancel', container_path(@container) %>
    </div>
  <% end %>
<% end %>