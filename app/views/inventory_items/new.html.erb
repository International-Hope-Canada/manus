<%= form_with(model: @inventory_item, local: true) do |form| %>
  <% if @inventory_item.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@inventory_item.errors.count, "error") %> prohibited this inventory item from being saved:</h2>
      <ul>
        <% @inventory_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Barcode</h2>
  <%= render partial: 'barcode_field', locals: { form: } %>

  <h2>Category</h2>
  <%= turbo_frame_tag 'item_subcategory_picker', src: '/item_subcategories/picker' %>

  <h2>More Information</h2>
  <div class="form-group">
    <%= form.label :oldest_expiry_date %>
    <%= form.date_field :oldest_expiry_date, required: true, class: "form-control" %>
  </div>
  <div class="form-group manual-type not-needed">
    <%= form.label :manual_type, "Manual" %>
    <%= form.select :manual_type, InventoryItem.manual_types.keys.map{|m| [InventoryItem::MANUAL_TYPE_DISPLAYS[m.to_sym], m]}, {}, class: "form-control", disabled: true %>
  </div>
  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <% if !@inventory_item.in_container? && !@inventory_item.new_record? %>
    <div class="form-group">
      <%= form.label :status, "Status" %>
      <%= form.select :status, InventoryItem.statuses.keys.without('in_container').map { |c| [InventoryItem::STATUS_DISPLAYS[c.to_sym], c] }, {}, class: "form-control" %>
    </div>
  <% end %>

  <% if @inventory_item.new_record? %>
    <div class="form-actions">
      <%= form.submit "Add item to inventory", class: "btn btn-primary" %>
      <%= link_to 'Cancel', '/', class: "btn btn-secondary" %>
    </div>
  <% else %>
    <div class="form-actions">
      <%= form.submit "Update inventory item", class: "btn btn-primary" %>
      <%= link_to 'Cancel', inventory_item_path(@inventory_item), class: "btn btn-secondary" %>
    </div>
  <% end %>
<% end %>