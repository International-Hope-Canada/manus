<p>
  <%= link_to 'Edit', edit_user_path(@user), class: "btn" %>
</p>

<table class="data-table">
  <tbody>
    <tr>
      <th>Name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>Initials</th>
      <td><%= @user.initials %></td>
    </tr>
    <tr>
      <th>Roles</th>
      <td><%= @user.roles.join(', ') %></td>
    </tr>
    <tr>
      <th>Active</th> 
      <td><%= render_boolean(@user.active) %></td>
    </tr>
  </tbody>
</table>