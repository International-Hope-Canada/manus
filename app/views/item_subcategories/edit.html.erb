<%= form_with(model: @item_subcategory, local: true) do |form| %>
  <% if @item_subcategory.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@item_subcategory.errors.count, "error") %> prohibited this item subcategory from being saved:</h2>
      <ul>
        <% @item_subcategory.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.label :active, class: 'checkbox-label' do %>
      <%= form.checkbox :active, class: "form-control" %>
      Active
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :catchall, 'Listing' %>
    <%= form.label :catchall, class: 'checkbox-label' do %>
      <%= form.checkbox :catchall, class: "form-control" %>
      Catch-all <i>(will be listed last)</i>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :item_category_id, "Category" %>
    <%= form.select :item_category_id, grouped_item_category_options, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :value %>
    <%= form.number_field :value, min: 0, step: 0.01, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :weight_kg, "Weight (kg)" %>
    <%= form.number_field :weight_kg, min: 0, step: 0.1, class: "form-control" %>
  </div>
  
  <% if @item_subcategory.new_record? %>
    <div class="form-actions">
      <%= form.submit "Create subcategory" %>
      <%= link_to 'Cancel', @item_subcategory.item_category || item_categories_path %>
    </div>
  <% else %>
    <div class="form-actions">
      <%= form.submit "Update subcategory" %>
      <%= link_to 'Cancel', @item_subcategory %>
    </div>
  <% end %>
<% end %>