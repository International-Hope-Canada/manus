<h1>Edit Subcategory: <%= @item_subcategory.item_category.name %>: <%= @item_subcategory.name %></h1>

<%= form_with(model: @item_subcategory, local: true) do |form| %>
  <% if @item_subcategory.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@item_subcategory.errors.count, "error") %> prohibited this item subcategory from being saved:</h2>
      <ul>
        <% @item_subcategory.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :item_category_id, "Category" %>
    <%= form.collection_select :item_category_id, ItemCategory.order(:name), :id, :name, {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :value %>
    <%= form.number_field :value, min: 0, step: 0.01, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :weight_kg, "Weight (kg)" %>
    <%= form.number_field :weight_kg, min: 0, step: 0.01, class: "form-control" %>
  </div>
  <div class="form-actions">
    <%= form.submit "Update Item Subcategory", class: "btn btn-primary" %>
    <%= link_to 'Cancel', @item_subcategory, class: "btn btn-secondary" %>
  </div>
<% end %>