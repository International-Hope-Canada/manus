<%= form_with(model: @user, local: true) do |form| %>
  <%= render partial: 'shared/validation_error', locals: { record: @user } %>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :initials %>
    <%= form.text_field :initials, class: "form-control", required: true, maxlength: 3 %>
  </div>

  <div class="form-group">
    <%= form.label :roles %>
    <%= form.label :admin, class: 'checkbox-label' do %>
      <%= form.check_box :admin %>
      Admin
    <% end %>
    <%= form.label :picker, class: 'checkbox-label' do %>
      <%= form.check_box :picker%> 
      Picker
    <% end %>
    <%= form.label :packer, class: 'checkbox-label' do %>
      <%= form.check_box :packer %>
      Packer
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.label :active, class: 'checkbox-label' do %>
      <%= form.check_box :active %>
      Active
    <% end %>
  </div>

  <% if @user.new_record? %>
    <div class="form-actions">
      <%= form.submit "Create User" %>
      <%= link_to 'Cancel', users_path %>
    </div>
  <% else %>
    <div class="form-actions">
      <%= form.submit "Update User" %>
      <%= link_to 'Cancel', @user %>
    </div>
  <% end %>
<% end %>