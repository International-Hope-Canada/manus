<% if current_user.admin? %>
  <div class="page-actions">
    <p>
      <%= link_to 'Edit', edit_item_subcategory_path(@item_subcategory), class: "btn" %>
      <%= link_to("Delete", @item_subcategory, class: 'btn', data: { turbo_method: :delete, turbo_confirm: "Delete this subcategory?" }) if @item_subcategory.destroyable? %>
    </p>
  </div>
<% end %>

<table class="data-table">
  <tbody>
    <tr>
      <th>Category</th>
      <td><%= link_to @item_subcategory.item_category.name, @item_subcategory.item_category %></td>
    </tr>
    <tr>
      <th>Active</th>
      <td><%= render_boolean(@item_subcategory.active) %></td>
    </tr>
    <tr>
      <th>Catch-all</th>
      <td><%= render_boolean(@item_subcategory.catchall) %></td>
    </tr>
    <tr>
      <th>Value</th>
      <td class="numeric"><%= number_to_currency(@item_subcategory.value) if @item_subcategory.value %></td>
    </tr>
    <tr>
      <th>Weight (kg)</th>
      <td class="numeric"><%= @item_subcategory.weight_kg %></td>
    </tr>
  </tbody>
</table>