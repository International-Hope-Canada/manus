<%= form_with(model: @item_category, local: true) do |form| %>
  <% if @item_category.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@item_category.errors.count, "error") %> prohibited this item category from being saved:</h2>
      <ul>
        <% @item_category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :classification %>
    <%= form.select :classification, ItemCategory.classifications.keys.map { |c| [c.capitalize, c] }, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :value %>
    <%= form.number_field :value, min: 0, step: 0.01, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :weight_kg, "Weight (kg)" %>
    <%= form.number_field :weight_kg, min: 0, step: 0.1, class: "form-control" %>
  </div>

  <% if @item_category.item_subcategories.empty? %>
    <div class="form-group">
      <label></label>
      <%= label_tag :ensure_subcategory, class: 'checkbox-label' do %>
        <%= check_box_tag :ensure_subcategory, '1', false %>
        Create 'General' subcategory
      <% end %>
    </div>
  <% end %>

  <% if @item_category.new_record? %>
    <div class="form-actions">
      <%= form.submit "Create Item Category", class: "btn btn-primary" %>
      <%= link_to 'Cancel', item_categories_path, class: "btn btn-secondary" %>
    </div>
  <% else %>
    <div class="form-actions">
      <%= form.submit "Update Item Category", class: "btn btn-primary" %>
      <%= link_to 'Cancel', @item_category, class: "btn btn-secondary" %>
    </div>
  <% end %>
<% end %>